# Contentful Space ID (required)
CONTENTFUL_SPACE_ID=your_space_id_here

# Contentful Content Delivery API Token (required - für Production)
CONTENTFUL_ACCESS_TOKEN=your_delivery_token_here

# Contentful Content Preview API Token (optional - für Draft-Modus)
CONTENTFUL_PREVIEW_ACCESS_TOKEN=your_preview_token_here

# Contentful Content Management API Token (optional - nur für Setup-Script)
CONTENTFUL_MANAGEMENT_TOKEN=your_management_token_here

# Preview Mode Secret (optional - für Draft-Modus)
CONTENTFUL_PREVIEW_SECRET=your_preview_secret_here

# Webhook Revalidation Secret (optional - für automatische Updates)
CONTENTFUL_REVALIDATE_SECRET=your_revalidate_secret_here
